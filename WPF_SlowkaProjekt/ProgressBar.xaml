<Window x:Class="WPF_SlowkaProjekt.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SlowkaProjekt"
        mc:Ignorable="d"
        Title="ProgressBar" Height="450" Width="800">
    <Grid>
        <TextBlock Name="ProgressText" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="16"/>
 
        <ProgressBar Name="UserProgressBar" Width="300" Height="25" Minimum="0" Maximum="100" Value="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Button Content="Zwiększ progres" Width="150" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="195,0,0,20" Click="IncreaseProgress"/>

        <Button Content="Resetuj progres" Width="150" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="80,0,0,20" Click="ResetProgress"/>
        
        
        
        
    </Grid>
</Window>
