        <Label
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Wybierz interesujący cię dział"
            FontSize="25"
            FontWeight="Bold" />
