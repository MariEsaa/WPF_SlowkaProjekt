            x:Name="Unit1Btn"
            Click="Unit1Btn_Click"
            Grid.Row="2"
            Grid.Column="0"
            Width="250"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Blue"
            BorderBrush="Black"
            BorderThickness="3"
            Content="Dział 1"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7" />
